<h2 class="text-center">Title: <%= @article.title %> </h1>

<div class="well col-xs-8 col-xs-offset-2 text-left">

	<% if @article.user %>
		<div class="text-center">
			<%= link_to gravatar_for(@article.user), user_path(@article.user) %>
			<%= link_to @article.user.username, user_path(@article.user) %>,
			<small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small>
		</div>
		<% end %>

	<h4 class="text-center description"><strong>Description:</strong></h4>
	<hr>
	<%= @article.description %>
	<div class="article-actions">
		<%= link_to 'Edit this article', edit_article_path(@article), class: "btn btn-xs btn-primary" %>
		<%= link_to 'Go to articles', articles_path, class: "btn btn-xs btn-success" %>
		<%= link_to "Delete this article", article_path(@article), method: :delete,
			class: "btn btn-xs btn-danger" %>
	</div>
</div>
